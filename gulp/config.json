{
    "root": {
        "src": "./src",
        "dest": "./dest"
    },

    "tasks": {
        "styles": {
            "path": "styles",
            "sass": {
                "outputStyle": "expanded",
                "precision": 10
            },
            "nano": {
                "discardComments": {
                    "removeAllButFirst": true
                },
                "discardUnused": false,
                "zindex": false,
                "reduceIdents": false
            },
            "autoprefixer": {
                "browsers": [
                    "Chrome >= 35",
                    "Firefox >= 31",
                    "Edge >= 12",
                    "Explorer >= 9",
                    "iOS >= 8",
                    "Safari >= 8",
                    "Android 2.3",
                    "Android >= 4",
                    "Opera >= 12"
                ]
            },
            "extensions": ["scss"]
        },

        "scripts": {
            "path": "scripts",
            "extensions": ["js"]
        }
    }
}
